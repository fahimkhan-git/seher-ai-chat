API_PORT=4000
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080,http://127.0.0.1:8080
DATA_STORE=mongo
DATA_DIRECTORY=./data
MONGO_URI=mongodb://localhost:27017/homesfy_chat

# Widget Configuration Security
# Set a strong API key to protect widget config updates
# Generate a secure key: openssl rand -hex 32
# If not set, config updates will be allowed (not secure for production)
WIDGET_CONFIG_API_KEY=your-secure-api-key-here

# Gemini AI Configuration - Get your free API key from: https://makersuite.google.com/app/apikey
# Without this key, chat will use fallback keyword matching instead of full AI capabilities
# Uses gemini-2.5-flash model for fast, intelligent responses
GEMINI_API_KEY=your-gemini-api-key-here

